<!-- extensions/rewardspro-widget/blocks/rewards-widget.liquid -->
{% comment %}
  RewardsPro Widget - Production Version
  Compatible with all modern browsers and Shopify themes
{% endcomment %}

{% if block.settings.enabled %}
  <!-- Main Widget Container -->
  <div id="rewardspro-widget-{{ block.id }}" 
       class="rewardspro-widget rp-position-{{ block.settings.position }}"
       data-rewards-widget
       data-block-id="{{ block.id }}">
    
    <!-- Close Button -->
    <button class="rp-close-btn" type="button" aria-label="Close rewards widget" title="Close">
      <span class="rp-close-icon" aria-hidden="true">&times;</span>
    </button>
    
    <!-- Widget Content Area -->
    <div class="rp-content">
      {% if customer %}
        <!-- Loading State for Logged-in Customers -->
        <div class="rp-loading">
          <div class="rp-spinner"></div>
          <p>Loading your rewards...</p>
        </div>
      {% else %}
        <!-- Login Prompt for Non-logged-in Users -->
        <div class="rp-login-prompt">
          <div class="rp-login-icon">{{ block.settings.icon_emoji | default: 'üéÅ' }}</div>
          <h3>{{ block.settings.login_heading | default: 'Join Our Rewards Program!' }}</h3>
          <p class="rp-login-message">
            {{ block.settings.login_message | default: 'Earn cashback on every purchase and unlock exclusive benefits as a member.' }}
          </p>
          
          <div class="rp-benefits">
            <div class="rp-benefit">
              <span class="rp-benefit-icon">üí∞</span>
              <span>{{ block.settings.benefit_1 | default: 'Earn cashback on all orders' }}</span>
            </div>
            <div class="rp-benefit">
              <span class="rp-benefit-icon">‚≠ê</span>
              <span>{{ block.settings.benefit_2 | default: 'Unlock higher tier benefits' }}</span>
            </div>
            <div class="rp-benefit">
              <span class="rp-benefit-icon">üéØ</span>
              <span>{{ block.settings.benefit_3 | default: 'Get exclusive member offers' }}</span>
            </div>
          </div>
          
          <div class="rp-login-actions">
            <a href="{{ routes.account_login_url }}" class="rp-login-btn rp-btn-primary">
              Sign In
            </a>
            <a href="{{ routes.account_register_url }}" class="rp-register-btn rp-btn-secondary">
              Create Account
            </a>
          </div>
          
          <p class="rp-login-footer">
            Already have an account? Sign in to view your rewards balance.
          </p>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Minimized Button -->
  <button class="rp-minimized rp-position-{{ block.settings.position }}" 
          type="button"
          aria-label="Open rewards widget" 
          style="display: none;">
    <span class="rp-icon">{{ block.settings.icon_emoji | default: 'üéÅ' }}</span>
    <span class="rp-text">Rewards</span>
    <span class="rp-mini-value" data-rewards-credit></span>
  </button>

  <!-- Pass Context to JavaScript -->
  <script type="application/json" data-rewards-context="{{ block.id }}">
    {
      "blockId": {{ block.id | json }},
      "shopDomain": {{ shop.domain | json }},
      "shopName": {{ shop.name | json }},
      "apiUrl": {{ '/apps/rewardspro/membership' | json }},
      "accountUrl": {{ routes.account_url | json }},
      "loginUrl": {{ routes.account_login_url | json }},
      "registerUrl": {{ routes.account_register_url | json }},
      {% if customer %}
        "isLoggedIn": true,
        "customerId": {{ customer.id | json }},
        "customerEmail": {{ customer.email | json }},
        "customerName": {{ customer.first_name | default: customer.email | json }}
      {% else %}
        "isLoggedIn": false,
        "customerId": null,
        "customerEmail": null,
        "customerName": null
      {% endif %},
      "settings": {
        "position": {{ block.settings.position | json }},
        "autoOpen": {{ block.settings.auto_open | default: false | json }},
        "openDelay": {{ block.settings.open_delay | default: 3000 | json }}
      }
    }
  </script>

  {% comment %} Inline Critical CSS for Fast Initial Render {% endcomment %}
  {% if block.settings.inline_critical_css %}
    <style>
      /* Critical CSS for immediate render */
      #rewardspro-widget-{{ block.id }} {
        position: fixed;
        z-index: 999999;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      
      /* Position classes */
      #rewardspro-widget-{{ block.id }}.rp-position-bottom-right { bottom: 20px; right: 20px; }
      #rewardspro-widget-{{ block.id }}.rp-position-bottom-left { bottom: 20px; left: 20px; }
      #rewardspro-widget-{{ block.id }}.rp-position-top-right { top: 20px; right: 20px; }
      #rewardspro-widget-{{ block.id }}.rp-position-top-left { top: 20px; left: 20px; }
      
      /* Close button */
      #rewardspro-widget-{{ block.id }} .rp-close-btn {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.05);
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        z-index: 10;
        padding: 0;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-close-btn:hover {
        background: rgba(0, 0, 0, 0.1);
        transform: rotate(90deg);
      }
      
      #rewardspro-widget-{{ block.id }} .rp-close-icon {
        font-size: 24px;
        line-height: 1;
        color: #666;
      }
      
      /* Content container */
      #rewardspro-widget-{{ block.id }} .rp-content {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        padding: 20px;
        min-width: 320px;
        max-width: 400px;
        animation: rpSlideIn 0.3s ease-out;
      }
      
      /* Loading spinner */
      #rewardspro-widget-{{ block.id }} .rp-spinner {
        width: 40px;
        height: 40px;
        margin: 0 auto 10px;
        border: 3px solid #f3f3f3;
        border-top-color: #667eea;
        border-radius: 50%;
        animation: rpSpin 1s linear infinite;
      }
      
      /* Minimized button */
      .rp-minimized {
        display: flex;
        align-items: center;
        gap: 8px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        transition: all 0.3s ease;
        position: fixed;
        z-index: 999998;
      }
      
      .rp-minimized.rp-position-bottom-right { bottom: 20px; right: 20px; }
      .rp-minimized.rp-position-bottom-left { bottom: 20px; left: 20px; }
      .rp-minimized.rp-position-top-right { top: 20px; right: 20px; }
      .rp-minimized.rp-position-top-left { top: 20px; left: 20px; }
      
      .rp-minimized:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
      }
      
      /* Animations */
      @keyframes rpSlideIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      @keyframes rpSpin {
        to { transform: rotate(360deg); }
      }
      
      /* Mobile responsive */
      @media (max-width: 480px) {
        #rewardspro-widget-{{ block.id }} .rp-content {
          min-width: calc(100vw - 40px);
          max-width: calc(100vw - 40px);
        }
      }
    </style>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Rewards Widget",
  "target": "body",
  "stylesheet": "rewards-widget.css",
  "javascript": "rewards-widget.js",
  "settings": [
    {
      "type": "header",
      "content": "Widget Settings"
    },
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Widget",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "inline_critical_css",
      "label": "Inline Critical CSS",
      "default": true,
      "info": "Includes critical styles inline for faster rendering"
    },
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        {"value": "bottom-right", "label": "Bottom Right"},
        {"value": "bottom-left", "label": "Bottom Left"},
        {"value": "top-right", "label": "Top Right"},
        {"value": "top-left", "label": "Top Left"}
      ],
      "default": "bottom-right"
    },
    {
      "type": "checkbox",
      "id": "auto_open",
      "label": "Auto-open on page load",
      "default": false,
      "info": "Automatically opens the widget after a delay"
    },
    {
      "type": "range",
      "id": "open_delay",
      "label": "Auto-open delay (ms)",
      "min": 1000,
      "max": 9999,
      "step": 1000,
      "default": 3000,
      "info": "Delay before auto-opening (if enabled)"
    },
    {
      "type": "header",
      "content": "Customization"
    },
    {
      "type": "text",
      "id": "icon_emoji",
      "label": "Icon Emoji",
      "default": "üéÅ",
      "info": "Emoji shown in the widget and minimized button"
    },
    {
      "type": "text",
      "id": "login_heading",
      "label": "Login Heading",
      "default": "Join Our Rewards Program!"
    },
    {
      "type": "textarea",
      "id": "login_message",
      "label": "Login Message",
      "default": "Earn cashback on every purchase and unlock exclusive benefits as a member."
    },
    {
      "type": "text",
      "id": "benefit_1",
      "label": "Benefit 1",
      "default": "Earn cashback on all orders"
    },
    {
      "type": "text",
      "id": "benefit_2",
      "label": "Benefit 2",
      "default": "Unlock higher tier benefits"
    },
    {
      "type": "text",
      "id": "benefit_3",
      "label": "Benefit 3",
      "default": "Get exclusive member offers"
    }
  ]
}
{% endschema %}