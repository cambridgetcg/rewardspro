<!-- extensions/rewardspro-widget/blocks/rewards-widget.liquid -->
{% if block.settings.enabled %}
  <div id="rewardspro-widget-{{ block.id }}" 
       class="rewardspro-widget rp-position-{{ block.settings.position }}"
       data-rewards-widget
       data-block-id="{{ block.id }}">
    
    <button class="rp-close-btn" type="button" aria-label="Close rewards widget" title="Close">
      <span class="rp-close-icon" aria-hidden="true">&times;</span>
    </button>
    
    <div class="rp-content">
      {% if customer %}
        <div class="rp-loading">
          <div class="rp-spinner"></div>
          <p>Loading your rewards...</p>
        </div>
      {% else %}
        <div class="rp-login-prompt">
          <div class="rp-login-icon">üéÅ</div>
          <h3>Join Our Rewards Program!</h3>
          <p class="rp-login-message">
            Earn cashback on every purchase and unlock exclusive benefits as a member.
          </p>
          
          <div class="rp-benefits">
            <div class="rp-benefit">
              <span class="rp-benefit-icon">üí∞</span>
              <span>Earn cashback on all orders</span>
            </div>
            <div class="rp-benefit">
              <span class="rp-benefit-icon">‚≠ê</span>
              <span>Unlock higher tier benefits</span>
            </div>
            <div class="rp-benefit">
              <span class="rp-benefit-icon">üéØ</span>
              <span>Get exclusive member offers</span>
            </div>
          </div>
          
          <div class="rp-login-actions">
            <a href="{{ routes.account_login_url }}" class="rp-login-btn rp-btn-primary">
              Sign In
            </a>
            <a href="{{ routes.account_register_url }}" class="rp-register-btn rp-btn-secondary">
              Create Account
            </a>
          </div>
          
          <p class="rp-login-footer">
            Already have an account? Sign in to view your rewards balance.
          </p>
        </div>
      {% endif %}
    </div>
  </div>
  
  <button class="rp-minimized rp-position-{{ block.settings.position }}" 
          type="button"
          aria-label="Open rewards widget" 
          style="display: none;">
    <span class="rp-icon">üéÅ</span>
    <span class="rp-text">Rewards</span>
    <span class="rp-mini-value" data-rewards-credit></span>
  </button>

  <script>
    (function() {
      window.RewardsProContext = window.RewardsProContext || {};
      window.RewardsProContext['{{ block.id }}'] = {
        blockId: {{ block.id | json }},
        shopDomain: {{ shop.domain | json }},
        shopName: {{ shop.name | json }},
        {% if customer %}
          isLoggedIn: true,
          customerId: {{ customer.id | json }},
          customerEmail: {{ customer.email | json }},
          customerName: {{ customer.first_name | default: customer.email | json }}
        {% else %}
          isLoggedIn: false,
          customerId: null,
          customerEmail: null,
          customerName: null
        {% endif %}
      };
    })();
  </script>

  {% if block.settings.inline_critical_css %}
    <style>
      #rewardspro-widget-{{ block.id }} {
        position: fixed;
        z-index: 999999;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      
      #rewardspro-widget-{{ block.id }}.rp-position-bottom-right {
        bottom: 20px;
        right: 20px;
      }
      
      #rewardspro-widget-{{ block.id }}.rp-position-bottom-left {
        bottom: 20px;
        left: 20px;
      }
      
      #rewardspro-widget-{{ block.id }}.rp-position-top-right {
        top: 20px;
        right: 20px;
      }
      
      #rewardspro-widget-{{ block.id }}.rp-position-top-left {
        top: 20px;
        left: 20px;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-close-btn {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.05);
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        z-index: 10;
        padding: 0;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-close-btn:hover {
        background: rgba(0, 0, 0, 0.1);
        transform: rotate(90deg);
      }
      
      #rewardspro-widget-{{ block.id }} .rp-close-icon {
        font-size: 24px;
        line-height: 1;
        color: #666;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-content {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        padding: 20px;
        min-width: 320px;
        max-width: 400px;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-loading {
        text-align: center;
        padding: 20px;
        color: #666;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-spinner {
        width: 40px;
        height: 40px;
        margin: 0 auto 10px;
        border: 3px solid #f3f3f3;
        border-top: 3px solid #667eea;
        border-radius: 50%;
        animation: rpSpin 1s linear infinite;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-prompt {
        padding: 12px;
        text-align: center;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-icon {
        font-size: 48px;
        margin-bottom: 16px;
        animation: rpBounce 2s infinite;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-prompt h3 {
        margin: 0 0 12px 0;
        font-size: 24px;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-benefits {
        margin: 24px 0;
        padding: 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 12px;
        text-align: left;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-benefit {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 0;
        font-size: 14px;
        color: #495057;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin: 24px 0;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-btn,
      #rewardspro-widget-{{ block.id }} .rp-register-btn {
        display: inline-block;
        padding: 14px 32px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
      }
      
      #rewardspro-widget-{{ block.id }} .rp-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
        color: white;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-btn-secondary {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-btn-secondary:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
      }
      
      .rp-minimized {
        display: flex;
        align-items: center;
        gap: 8px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        transition: all 0.3s ease;
        position: fixed;
        z-index: 999998;
      }
      
      .rp-minimized.rp-position-bottom-right { bottom: 20px; right: 20px; }
      .rp-minimized.rp-position-bottom-left { bottom: 20px; left: 20px; }
      .rp-minimized.rp-position-top-right { top: 20px; right: 20px; }
      .rp-minimized.rp-position-top-left { top: 20px; left: 20px; }
      
      .rp-minimized:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
      }
      
      .rp-minimized .rp-mini-value {
        background: rgba(255, 255, 255, 0.2);
        padding: 2px 8px;
        border-radius: 12px;
        font-weight: 700;
        display: none;
      }
      
      @keyframes rpSpin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      
      @keyframes rpBounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }
      
      @keyframes rpSlideIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      @keyframes rpSlideOut {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(20px); }
      }
      
      @media (max-width: 480px) {
        #rewardspro-widget-{{ block.id }} .rp-content {
          min-width: auto;
          max-width: calc(100vw - 40px);
        }
        
        #rewardspro-widget-{{ block.id }} .rp-login-actions {
          flex-direction: column;
        }
        
        #rewardspro-widget-{{ block.id }} .rp-login-btn,
        #rewardspro-widget-{{ block.id }} .rp-register-btn {
          width: 100%;
        }
      }
    </style>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Rewards Widget",
  "target": "body",
  "stylesheet": "rewards-widget.css",
  "javascript": "rewards-widget.js",
  "settings": [
    {
      "type": "header",
      "content": "Widget Settings"
    },
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Widget",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "inline_critical_css",
      "label": "Inline Critical CSS",
      "default": true,
      "info": "Includes critical styles inline for faster rendering"
    },
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        {"value": "bottom-right", "label": "Bottom Right"},
        {"value": "bottom-left", "label": "Bottom Left"},
        {"value": "top-right", "label": "Top Right"},
        {"value": "top-left", "label": "Top Left"}
      ],
      "default": "bottom-right"
    }
  ]
}
{% endschema %}