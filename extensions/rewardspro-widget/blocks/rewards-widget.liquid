<!-- extensions/rewardspro-widget/blocks/rewards-widget.liquid -->
{% comment %} 
  Fixed version with better customer detection
{% endcomment %}

{% if block.settings.enabled %}
  <div id="rewardspro-widget-{{ block.id }}" 
       class="rewardspro-widget rp-position-{{ block.settings.position }}"
       data-rewards-widget
       data-block-id="{{ block.id }}">
    
    <div class="rp-content">
      <!-- JavaScript will fill this based on login status -->
      <!-- Initial loading state or login prompt based on customer status -->
      {% if customer %}
        <div class="rp-loading">
          <div class="rp-spinner"></div>
          <p>Loading your rewards...</p>
        </div>
      {% else %}
        <!-- Show login prompt immediately for non-logged-in users -->
        <div class="rp-login-prompt">
          <div class="rp-login-icon">üéÅ</div>
          <h3>Join Our Rewards Program!</h3>
          <p class="rp-login-message">
            Earn cashback on every purchase and unlock exclusive benefits as a member.
          </p>
          
          <div class="rp-benefits">
            <div class="rp-benefit">
              <span class="rp-benefit-icon">üí∞</span>
              <span>Earn cashback on all orders</span>
            </div>
            <div class="rp-benefit">
              <span class="rp-benefit-icon">‚≠ê</span>
              <span>Unlock higher tier benefits</span>
            </div>
            <div class="rp-benefit">
              <span class="rp-benefit-icon">üéØ</span>
              <span>Get exclusive member offers</span>
            </div>
          </div>
          
          <div class="rp-login-actions">
            <a href="/account/login" class="rp-login-btn rp-btn-primary">
              Sign In
            </a>
            <a href="/account/register" class="rp-register-btn rp-btn-secondary">
              Create Account
            </a>
          </div>
          
          <p class="rp-login-footer">
            Already have an account? Sign in to view your rewards balance.
          </p>
        </div>
      {% endif %}
    </div>
    
    {% if block.settings.show_minimized %}
      <button class="rp-minimized" aria-label="Open rewards" style="display: none;">
        <span class="rp-icon">üéÅ</span>
        <span class="rp-text">Rewards</span>
        <span class="rp-mini-value" data-rewards-credit>$0</span>
      </button>
    {% endif %}
  </div>

  {% comment %} Pass customer context to JavaScript {% endcomment %}
  <script>
    (function() {
      // Store customer context for JavaScript to use
      window.RewardsProContext = window.RewardsProContext || {};
      window.RewardsProContext['{{ block.id }}'] = {
        blockId: {{ block.id | json }},
        shopDomain: {{ shop.domain | json }},
        shopName: {{ shop.name | json }},
        {% if customer %}
          isLoggedIn: true,
          customerId: {{ customer.id | json }},
          customerEmail: {{ customer.email | json }},
          customerName: {{ customer.first_name | default: customer.email | json }},
        {% else %}
          isLoggedIn: false,
          customerId: null,
          customerEmail: null,
          customerName: null,
        {% endif %}
        settings: {
          position: {{ block.settings.position | json }},
          showMinimized: {{ block.settings.show_minimized | json }}
        },
        debug: {{ block.settings.debug_mode | default: false | json }}
      };
      
      {% if block.settings.debug_mode %}
        console.log('[RewardsPro] Widget context:', window.RewardsProContext['{{ block.id }}']);
        {% if customer %}
          console.log('[RewardsPro] Customer is logged in:', {{ customer.id | json }});
        {% else %}
          console.log('[RewardsPro] Customer is NOT logged in');
        {% endif %}
      {% endif %}
    })();
  </script>

  {% comment %} Optional: Add minimal inline styles for initial load {% endcomment %}
  {% if block.settings.inline_critical_css %}
    <style>
      #rewardspro-widget-{{ block.id }} {
        position: fixed;
        z-index: 999999;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      
      #rewardspro-widget-{{ block.id }}.rp-position-bottom-right {
        bottom: 20px;
        right: 20px;
      }
      
      #rewardspro-widget-{{ block.id }}.rp-position-bottom-left {
        bottom: 20px;
        left: 20px;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-content {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        padding: 20px;
        min-width: 320px;
        max-width: 400px;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-loading {
        text-align: center;
        padding: 20px;
        color: #666;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-spinner {
        width: 40px;
        height: 40px;
        margin: 0 auto 10px;
        border: 3px solid #f3f3f3;
        border-top: 3px solid #667eea;
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }
      
      /* Login prompt styles for immediate display */
      #rewardspro-widget-{{ block.id }} .rp-login-prompt {
        padding: 32px;
        text-align: center;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-icon {
        font-size: 48px;
        margin-bottom: 16px;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-prompt h3 {
        margin: 0 0 12px 0;
        font-size: 24px;
        font-weight: 700;
        color: #1a1a1a;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-benefits {
        margin: 24px 0;
        padding: 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 12px;
        text-align: left;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-benefit {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 0;
        font-size: 14px;
        color: #495057;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin: 24px 0;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-login-btn,
      #rewardspro-widget-{{ block.id }} .rp-register-btn {
        display: inline-block;
        padding: 14px 32px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
      }
      
      #rewardspro-widget-{{ block.id }} .rp-btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
      }
      
      #rewardspro-widget-{{ block.id }} .rp-btn-secondary {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
      }
      
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
    </style>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Rewards Widget",
  "target": "body",
  "stylesheet": "rewards-widget.css",
  "javascript": "rewards-widget.js",
  "settings": [
    {
      "type": "header",
      "content": "Widget Settings"
    },
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Widget",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "debug_mode",
      "label": "Debug Mode",
      "default": false,
      "info": "Shows additional debug information in console"
    },
    {
      "type": "checkbox",
      "id": "inline_critical_css",
      "label": "Inline Critical CSS",
      "default": true,
      "info": "Includes critical styles inline for faster rendering"
    },
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        {"value": "bottom-right", "label": "Bottom Right"},
        {"value": "bottom-left", "label": "Bottom Left"},
        {"value": "top-right", "label": "Top Right"},
        {"value": "top-left", "label": "Top Left"}
      ],
      "default": "bottom-right"
    },
    {
      "type": "checkbox",
      "id": "show_minimized",
      "label": "Show Minimized Button",
      "default": false,
      "info": "Shows a small button when widget is closed"
    }
  ]
}
{% endschema %}